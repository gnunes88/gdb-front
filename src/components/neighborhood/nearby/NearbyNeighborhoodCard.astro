---
import type { NearbyNeighborhood } from '../../../types/neighborhood';

interface Props {
  neighborhood: NearbyNeighborhood;
}

const { neighborhood } = Astro.props;
const { name, short_description, image_url, distance, slug } = neighborhood;

function formatDistance(distance: number): string {
  return `Dist√¢ncia: ${(distance).toFixed(1).replace('.', ',')} km`;
}

const defaultImage = "https://ynkkkxhqzvqzzvikxteu.supabase.co/storage/v1/object/public/neighborhood_guide/imagem-bairro-padrao.jpg";
---

<article class="neighborhood-card">
  <a href={`/bairro/${slug}`}>
    <div class="image-container">
      <img 
        src={image_url || defaultImage} 
        alt={`Bairro ${name}`}
        loading="lazy"
      />
    </div>
    <div class="content">
      <h3>{name}</h3>
      <p class="description">{short_description}</p>
      <p class="distance">{formatDistance(distance)}</p>
    </div>
  </a>
</article>

<style>
  .neighborhood-card {
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    transition: transform 0.2s ease;
    border: 1px solid rgba(175, 175, 175, 0.75);
    height: 100%;
    display: flex;
  }

  .neighborhood-card:hover {
    transform: translateY(-4px);
  }

  a {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  .image-container {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .neighborhood-card:hover img {
    transform: scale(1.05);
  }

  .content {
    padding: 1.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  h3 {
    font-size: 1.25rem;
    color: #252525;
    margin: 0 0 0.5rem 0;
    font-weight: 600;
  }

  .description {
    font-size: 0.875rem;
    color: #484848;
    line-height: 1.5;
    margin: 0 0 1rem 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex-grow: 1;
  }

  .distance {
    font-size: 0.875rem;
    color: #EB194B;
    margin: 0;
    font-weight: 500;
  }
</style>