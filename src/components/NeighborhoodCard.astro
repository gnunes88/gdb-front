---
interface Props {
  name: string;
  slug: string;
  shortDescription: string;
}

const { name, slug, shortDescription } = Astro.props;
---

<article class="neighborhood-card">
  <a href={`/bairro/${slug}`}>
    <h2>{name}</h2>
    <p>{shortDescription}</p>
  </a>
</article>

<style>
  .neighborhood-card {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease;
  }

  .neighborhood-card:hover {
    transform: translateY(-4px);
  }

  .neighborhood-card a {
    display: block;
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
  }

  .neighborhood-card h2 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
    color: #2c3e50;
  }

  .neighborhood-card p {
    margin: 0;
    color: #666;
    font-size: 1rem;
    line-height: 1.5;
  }
</style>