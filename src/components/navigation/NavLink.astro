---
interface Props {
  href: string;
  text: string;
}

const { href, text } = Astro.props;
---

<a href={href} class="nav-link">
  {text}
</a>

<style>
  .nav-link {
    color: #484848;
    text-decoration: none;
    padding: 0.5rem;
    font-size: 14px;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: #ff0054;
  }
</style>